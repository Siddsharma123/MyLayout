@page
@model MyFirstLayout.Pages.Material.IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Material List";
}

<h1>Materials</h1>
<div class="row justify-content-around m-2">
    <div class="col-3 grid ">
        Purchase Material <br />
           <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPurchase">
           Add <i class="fa fa-plus-circle"></i>
           </button>
    </div>
    <div class="col-3 grid ">
        UnSegregated Material <br />
     <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addUnSeg">
                Add <i class="fa fa-plus-circle"></i>
       </button>
    </div>
    <div class="col-3 grid ">
        Segregated Material <br />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addSeg">
         Add <i class="fa fa-plus-circle"></i>
      </button>
    </div>
</div>
<div class="row justify-content-around m-2">
    <div class="col-3">
        <div class="row">
            @foreach (var material in Model.PurchaseMaterial)
            {
                <div class="col-12 grid mb-1">
                    <p>
                        Name:@material.Name , Unit:@material.Unit ,Type:@material.Type ,Group:@material.Group , GST:@material.GstPercent ,HSN:@material.HSN
                    </p>
                </div>
            }
        </div>
    </div>
    <div class="col-3 ">
        <div class="row">
            @foreach (var material in Model.SegregatedMaterial)
            {
                <div class="col-12 grid mb-1">
                    <p>
                        Name:@material.Name , Unit:@material.Unit  GST:@material.GstPercent,
                    </p>
                </div>

            }
        </div>
    </div>
    <div class="col-3">
        <div class="row">
            @foreach (var material in Model.UnsegregatedMaterial)
            {
                <div class="col-12 grid mb-1">
                    <p>
                        Name:@material.Name , Unit:@material.Unit
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@* Modals  for adding*@
<div class="modal" id="addPurchase">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Modal header</h3>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                A baking and cake decorating blog. Find cake recipes, DIY projects, tutorials and inspiration for both beginners and advanced bakers.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
